{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
  },
  "include": [
    "**/*.ts",
    "../shared/**/*"
  ],
  "exclude": [
    "apps/api/database/migrations",
    "apps/api/database/migrate.ts",
    "drizzle.config.ts"
  ]
}