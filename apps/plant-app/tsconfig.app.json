{
  "compilerOptions": {
    "jsx": "react-jsx", // For React 17+ JSX transform
    "target": "ES2020", // Or any target that works for your project
    "module": "ESNext",
    "moduleResolution": "node", // Make sure this is correct
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
